pipeline {
    agent {
        label 'eks-slave'
    }

    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-credentials')
        registry = "yoursureshdockerhub"
        registryCredential = 'yoursureshdockerhub'
        dockerImage = ''
    }

    stages {
        stage('Deleting old fe-deployment') {
            steps {
                sh 'kubectl delete deployment lms-webapp-deployment-test'
            }
        }

        stage('Building frontend image') {
            steps {
                sh 'cd webapp && docker build -t yoursureshdockerhub/jenkins-eks-fe .'
            }
        }

        stage('Docker login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }

        stage('Pushing image') {
            steps {
                sh 'docker push yoursureshdockerhub/jenkins-eks-fe'
            }
        }

        stage('Removing old images') {
            steps {
                sh 'docker rmi -f yoursureshdockerhub/jenkins-eks-fe'
            }
        }

        stage('Running frontend container') {
            steps {
                sh 'docker container rm --force webapp'
                sh 'cd k8s-files && kubectl apply -f frontend-deployment.yaml'
                sh 'cd k8s-files && kubectl apply -f frontend-service.yaml'
            }
        }
    }
}
